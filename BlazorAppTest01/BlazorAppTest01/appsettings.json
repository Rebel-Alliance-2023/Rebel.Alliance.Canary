{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "WebAppVerifiableCredential": {
    "Authority": "https://your-authority.com",
    "ClientId": "your-client-id",
    "ClientSecret": "your-client-secret",
    "Claims": {
      "aud": "your-audience",
      "iss": "your-issuer"
    }
  }
}